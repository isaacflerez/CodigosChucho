#include <Servo.h>

Servo servoX;
Servo servoY;

int joyX;
int joyY;

void setup() {
  servoX.attach(6);  // Conecta el servo X al pin 6
  servoY.attach(7);  // Conecta el servo Y al pin 7
}

void loop() {
  joyX = analogRead(A0);  // Lee el valor del joystick en el eje X
  joyY = analogRead(A1);  // Lee el valor del joystick en el eje Y

  int servoXAngle = map(joyX, 0, 1023, 0, 180);  // Mapea el valor a un 치ngulo entre 0 y 180 grados
  int servoYAngle = map(joyY, 0, 1023, 0, 180);

  servoX.write(servoXAngle);  // Mueve el servo X al 치ngulo calculado
  servoY.write(servoYAngle);  // Mueve el servo Y al 치ngulo calculado

  delay(15);  // Peque침a pausa para evitar vibraciones
}
